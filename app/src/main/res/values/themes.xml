<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/crayola</item>
        <item name="colorPrimaryVariant">@color/chineseBlack</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crayola</item>
        <item name="colorSecondaryVariant">@color/crayola</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/chineseBlack</item>
    </style>

    <!--TextView-->
    <style name="textViewLightStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <!--TextInputLayout-->
    <style name="TextInputLayoutStyle">
        <item name="startIconTint">@color/philippineSilver</item>
        <item name="hintTextColor">@color/crayola</item>
        <item name="boxStrokeColor">@color/crayola</item>
        <item name="boxBackgroundColor">@color/gunmetal</item>
    </style>


</resources>